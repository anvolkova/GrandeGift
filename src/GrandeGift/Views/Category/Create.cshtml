@model CategoryCreateViewModel

<div style="width: 30%">
    <h5>Create Category</h5>

    <form asp-controller="Category" asp-action="Create" method="post" enctype="multipart/form-data" asp-anti-forgery="true">

        <div asp-validation-summary="ModelOnly"></div>

        <div class="form-group">
            <label>Category Name </label>
            <input asp-for="Name" class="form-control" >  
            <span asp-validation-for="Name"></span>          
        </div>

        <div class="form-group">
            <label>Category details </label>
            <input asp-for="Details" class="form-control">
        </div>

        <div class="form-group">
            <label asp-for="Picture">Category Picture </label>
            <input type="file" name="file" class="form-control-file">
        </div>

        <div>
            <input type="submit" class="btn btn-primary" value="Save" />
        </div>
    </form>
</div>
