@model AddressUpdateViewModel

<form class="form-signin" asp-controller="Address" asp-action="Create" method="post">
    <h4 class="form-signin-heading">Update your delivery address</h4>

    <div asp-validation-summary="ModelOnly"></div>

    <div>
        <input asp-for="AddressId" hidden />
        <span asp-validation-for="AddressId"></span>
    </div>

    <div class="form-group">
        <label>Receiver name</label>
        <input asp-for="Name" class="form-control">
        <span asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <label>Address</label>
        <input asp-for="Street" class="form-control">
        <span asp-validation-for="Street"></span>
    </div>

    <div class="form-group">
        <label>City/Suburb</label>
        <input asp-for="City" class="form-control">
        <span asp-validation-for="City"></span>
    </div>

    <div class="form-group">
        <label>State/Region</label>
        <input asp-for="Region" class="form-control">
        <span asp-validation-for="Region"></span>
    </div>

    <div class="form-group">
        <label>Postcode</label>
        <input asp-for="PostCode" class="form-control">
        <span asp-validation-for="PostCode"></span>
    </div>

    <div class="form-group">
        <label>Country</label>
        <input asp-for="Country" class="form-control">
        <span asp-validation-for="Country"></span>
    </div>

    <div>
        <input type="submit" class="btn btn-primary" value="Save changes" />
        <a class="btn btn-light" href="/Address/List" role="button">Cancel</a>
    </div>

</form>
