@using System.Security

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/mystyle.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid">
        <img class="img-fluid" src="~/images/Backround2.png" />
    </div>
    <div class="container-fluid">
        <nav class="navbar navbar-expand-sm navbar-light">
            <a class="navbar-brand" href="/Home/Index">
                <img src="~/images/Logo1.png" />
            </a>
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#myNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav ">
                    <li class="nav-item active">
                        <a class="nav-link" href="/Home/Index">Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Static/About">About us </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Static/Contact">Contact us </a>
                    </li>
                    <li class="nav-item">
                        <span class="nav-link">&#9742; 1300 666 555</span>
                    </li>
                </ul>
                <ul class="nav navbar-nav ml-auto">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Login">&#x1f464; Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Register">Register</a>
                        </li>
                    }
                    else
                    {
                        @if (User.IsInRole("Customer"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/Order/Cart">Cart</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Address/List">Delivery address</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Account/UpdateProfile">Profile</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Logout">Logout </a>
                        </li>
                    }
                </ul>
            </div>
        </nav>
    </div>

    @if (User.Identity.IsAuthenticated)
    {
        <div class="container-fluid text-lg-right mb-2">
            <p><b>Welcome @User.Identity.Name</b></p>
        </div>
    }

    <div class="container">
        @RenderBody()
    </div>

    <footer class="container-fluid text-center card-footer">
        <div class="container">
            <div>
                <a href="/Static/PrivacyPolicy">Privacy Policy</a>
                &nbsp; | &nbsp;
                <a href="/Static/TermsOfUse">Terms of Use</a>
            </div>
        </div>
        <p><small>All amounts are in Australian Dollars and include GST.</small></p>
        <p>Copyright &copy;2017 Grande Gift. All rights reserved</p>
        <p><small>All contacts, hampers and details are not real. Please do not try to order hampers or contact us.</small></p>
    </footer>


    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/popper.js/dist/umd/popper.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
</body>

</html>
