@model AccountLoginViewModel

<form class="form-signin" asp-controller="Account" asp-action="Login" method="post" asp-route-returnurl="@Model.ReturnUrl">
    <h4 class="form-signin-heading">Please sign in</h4>
    <div asp-validation-summary="ModelOnly"></div>

    <div class="form-group">        
        <input asp-for="Username" class="form-control" placeholder="User name">
        <span asp-validation-for="Username"></span>
    </div>

    <div class="form-group">      
        <input asp-for="Password" type="password" class="form-control" placeholder="Password">
        <span asp-validation-for="Password"></span>
    </div>

    <div class="form-check">
        <label class="form-check-label">
            <input asp-for="RememberMe" type="checkbox" class="form-check-input">
            Remember me
        </label>
        <span asp-validation-for="RememberMe"></span>
    </div>

    <div>
        <input type="submit" class="btn btn-block btn-primary mb-4" value="Login" />
    </div>

</form>

